<h1>Lista de categorias</h1>
<a href="/admin/addcat">
    <button class="btn btn-outline-success">Adicionar Categoria</button>
</a> 

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}<br>
            Data de criação: {{date}}<br>
            
            </small>
            <a href="/admin/categorias/editar/{{_id}}"><button class="mt-3 btn btn-success">Editar Categoria</button></a>
            
            <form action="/admin/categorias/remover" method="POST">
                <input type="hidden" value="{{_id}}">
                <button type="submit" class="btn mt-2 btn-danger">Deletar Categoria</button>
            </form>
        </div>
    </div>

        
    
{{else}}

{{/each}}