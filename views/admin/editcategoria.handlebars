{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Editar Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/editar" method="POST">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" class="form-control" value="{{categoria.nome}}">
            <label for="slug">Slug:</label>
            <input for="slug" id="slug" name="slug" class="form-control" value="{{categoria.slug}}">
            <br>
            <button type="submit" class="btn btn-outline-success">Editar Categoria</button>
        </form>
        
    </div>
</div>