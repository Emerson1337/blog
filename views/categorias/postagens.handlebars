{{#each postagem}}

<div class="card mt-4">
    <div class="card-body">
        <h3>{{nome}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagens/{{slug}}"><button class="btn btn-outline-success">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Data de publicação: {{date}}</small>
    </div>
</div>


{{else}}
    <h5>Nenhuma postagem recente!</h5>
{{/each}}